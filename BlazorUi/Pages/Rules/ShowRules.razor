@page "/ShowRules"
@inject IRulesService RulesService
@inject ILocalStorageService LocalStorageService

@if (ShowRulesViewModel is not null)
{
    <table class="table-bordered table-dark">
        <thead>
        <tr>
            <td>شماره</td>
            <td>قانون</td>
            <td>تعداد نقص در ماه اخیر</td>
            <td>امکانات</td>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < ShowRulesViewModel.Count; i++)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @ShowRulesViewModel[i].Title
                </td>
                <td>
                    @ShowRulesViewModel[i].DivorcesCount
                </td>
                <td>
                    <a href="/Divorces/@ShowRulesViewModel[i].Id">نقض ها</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h1 class="mt-3">شما قانونی برای خود وضع نکردید!!!</h1>
}

@code {
    private List<ShowRulesVm> ShowRulesViewModel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var userName = await LocalStorageService.GetItemAsync<string>("userName");
        ShowRulesViewModel = await RulesService.GetRulesAsync(userName);
    }
}