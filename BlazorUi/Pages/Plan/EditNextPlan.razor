@page "/EditNextPlan"

@inject IPlanService _planService
@inject ILocalStorageService localStorage

<h1 class="mt-3">ویرایش برنامه ریزی</h1>
<hr>
@if (showPlanViewModel != null)
{
    <table class="table table-stripped table-dark">
        <tr>
            <th>ساعت</th>
            <th>توضیح</th>
            <th>وضعیت انجام</th>
        </tr>
        <tr>
            @foreach (var item in showPlanViewModel)
            {
                <td></td>
                <td></td>
                <td></td>
            }
        </tr>
    </table>
}
else
{
    <h1>برنامه ای برای امروز تنظیم نشده!!!</h1>
}

@code {
    protected List<ShowPlanViewModel> showPlanViewModel { get; set; } = new List<ShowPlanViewModel>();

    protected override async Task OnInitializedAsync()
    {
        var userName = await localStorage.GetItemAsync<string>("userName");
        showPlanViewModel = await _planService.GetPlansAsync(userName);
    }
}