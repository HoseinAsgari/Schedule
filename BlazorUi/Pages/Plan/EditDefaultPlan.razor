@page "/EditDefaultPlan"

@inject IPlanService PlanService

<h1 class="mt-3">نمایش قالب برنامه ریزی</h1>
<hr>
@if (ShowDefaultPlanViewModels != null)
{
    <table class="table table-stripped table-dark">
        <tr>
            <th>شماره</th>
            <th>توضیح</th>
            <th>وضعیت انجام</th>
        </tr>
        <tr>
            @foreach (var item in ShowDefaultPlanViewModels)
            {
                <td>@item.TimeOfDay</td>
                <td>@item.PlanName</td>
                <td></td>
            }
        </tr>
    </table>
}
else
{
    <h1>برنامه ای برای امروز تنظیم نشده!!!</h1>
}

@code {
    private List<ShowWeeklyPlanVm> ShowDefaultPlanViewModels { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        ShowDefaultPlanViewModels = await PlanService.GetWeeklyPlanAsync();
    }

}